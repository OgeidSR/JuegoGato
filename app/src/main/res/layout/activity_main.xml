<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/fghjk">
    <!-- Esta propiedad es donde iran los datos del ganador -->
    <LinearLayout
        android:id="@+id/datos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="50dp">


        <TextView
            android:id="@+id/ganador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold" />



    </LinearLayout>

    <!-- Aqui cree mi primer linear layout donde estaran los primeros 3 botones del juego -->

    <LinearLayout
        android:id="@+id/primera_fila"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datos"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/iron"
            android:text=" "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="50dp" />

        <Button
            android:id="@+id/boton_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/thanos"
            android:textStyle="bold"
            android:text=" "
            android:textColor="#000000"
            android:textSize="50dp" />

        <Button
            android:id="@+id/boton_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/iron"
            android:textStyle="bold"
            android:text=" "
            android:textColor="#000000"
            android:textSize="50dp" />


    </LinearLayout>
    <!-- Segunda linea de botones -->
    <LinearLayout
        android:id="@+id/segunda_fila"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/primera_fila"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/boton_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/thanos"
            android:textStyle="bold"
            android:text=" "
            android:textColor="#000000"
            android:textSize="50dp" />

        <Button
            android:id="@+id/boton_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/iron"
            android:textStyle="bold"
            android:text=" "
            android:textColor="#000000"
            android:textSize="50dp" />

        <Button
            android:id="@+id/boton_6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/thanos"
            android:textStyle="bold"
            android:text=" "
            android:textColor="#000000"
            android:textSize="50dp" />


    </LinearLayout>
    <!-- Tercera linea de botones -->
    <LinearLayout
        android:id="@+id/tercera_fila"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/segunda_fila"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/iron"
            android:textStyle="bold"
            android:text=" "
            android:textColor="#000000"
            android:textSize="50dp" />

        <Button
            android:id="@+id/boton_8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:background="@drawable/thanos"
            android:text=" "
            android:textColor="#000000"
            android:textSize="50dp" />

        <Button
            android:id="@+id/boton_9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/iron"
            android:textStyle="bold"
            android:text=" "
            android:textColor="#000000"
            android:textSize="50dp" />


    </LinearLayout>
    <!-- Botones para poder volver a jugar y salir -->

    <Button
        android:id="@+id/salir"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@drawable/reactor"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/volver_jugar"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@drawable/vengadores"
        android:textStyle="bold"
        android:layout_alignTop="@+id/salir"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />
</RelativeLayout>
