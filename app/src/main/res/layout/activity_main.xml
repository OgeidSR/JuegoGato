<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC"
    android:layout_gravity="center">
    <!-- Esta propiedad es donde iran los datos del ganador -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datos"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/ganador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#607d8b"
            android:textSize="50dp"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- Aqui cree mi primer linear layout donde estaran los primeros 3 botones del juego -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/primera_fila"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/datos">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/boton_1"
            android:textSize="50dp"
            android:textColor="#000000"
            android:text=" "
            android:background="#80cbc4"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/boton_2"
            android:textSize="50dp"
            android:textColor="#000000"
            android:background="#00796B"
            android:text=" "
            android:layout_gravity="center_horizontal"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#80cbc4"
            android:textSize="50dp"
            android:id="@+id/boton_3"
            android:textColor="#000000"
            android:text=" "
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
    <!-- Segunda linea de botones -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/segunda_fila"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/primera_fila">



        <Button
            android:id="@+id/boton_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00796B"
            android:textColor="#000000"
            android:textSize="50dp"
            android:layout_gravity="center_horizontal"
            android:text=" " />

        <Button
            android:id="@+id/boton_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#80cbc4"
            android:textColor="#000000"
            android:textSize="50dp"
            android:layout_gravity="center_horizontal"
            android:text=" " />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00796B"
            android:textSize="50dp"
            android:textColor="#000000"
            android:id="@+id/boton_6"
            android:text=" "
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
    <!-- Tercera linea de botones -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tercera_fila"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/segunda_fila">

        <Button
            android:id="@+id/boton_7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#80cbc4"
            android:textSize="50dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:text=" " />

        <Button
            android:id="@+id/boton_8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00796B"
            android:textSize="50dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:text=" " />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#80cbc4"
            android:id="@+id/boton_9"
            android:textSize="50dp"
            android:textColor="#000000"
            android:text=" "
            android:layout_gravity="center_horizontal"/>



    </LinearLayout>
    <!-- Botones para poder volver a jugar y salir -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tercera_fila"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:enabled="false"/>
      <Button
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:text="Volver a Jugar"
          android:textStyle="bold"
          android:background="#26a69a"
          android:id="@+id/volver_jugar"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:enabled="false"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#26a69a"
            android:text="SALIR"
            android:textStyle="bold"
            android:id="@+id/salir"/>
    </LinearLayout>
</RelativeLayout>
